{% extends 'base.html.twig' %}

{% block title %}Catálogo de Obras{% endblock %}

{% block body %}
    <h1 style="text-align: center; margin-bottom: 30px;">Catálogo de Obras</h1>

    <div class="catalogo-container">
        {% for obra in obras %}
            <div class="obra-card">
                <img class="obra-portada" src="{{ obra.Portada }}" alt="{{ obra.Titulo }}">
                <div class="obra-info">
                    <div class="obra-titulo">{{ obra.Titulo }}</div>
                    <div class="obra-sinopsis">{{ obra.Sinopsis|slice(0, 100) ~ '...' }}</div>
                    <div class="obra-fecha">{{ obra.FechaSalida ? obra.FechaSalida|date('Y') : '' }}</div>
                    <div class="obra-genero">
                        {% for genero in obra.Genero %}
                            {{ genero.Nombre }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <p>No hay obras disponibles.</p>
        {% endfor %}
    </div>
{% endblock %}
