{% extends 'base.html.twig' %}

{% block title %}Obra index{% endblock %}

{% block body %}
    <h1>Obra index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Sinopsis</th>
                <th>Fecha_salida</th>
                <th>Portada</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for obra in obras %}
            <tr>
                <td>{{ obra.id }}</td>
                <td>{{ obra.Titulo }}</td>
                <td>{{ obra.Sinopsis }}</td>
                <td>{{ obra.FechaSalida ? obra.FechaSalida|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ obra.Portada }}</td>
                <td>
                    <a href="{{ path('app_obra_show', {'id': obra.id}) }}">show</a>
                    <a href="{{ path('app_obra_edit', {'id': obra.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_obra_new') }}">Create new</a>
    <a href="{{ path('app_obra_new') }}">Este boton se modifico por facu</a>
{% endblock %}
