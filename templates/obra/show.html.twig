{% extends 'base.html.twig' %}

{% block title %}Obra{% endblock %}

{% block body %}
    <h1>Obra</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ obra.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ obra.Titulo }}</td>
            </tr>
            <tr>
                <th>Sinopsis</th>
                <td>{{ obra.Sinopsis }}</td>
            </tr>
            <tr>
                <th>Fecha_salida</th>
                <td>{{ obra.FechaSalida ? obra.FechaSalida|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Portada</th>
                <td>
                    {% if obra.Portada %}
                        <img src="{{ obra.Portada }}" alt="Portada de {{ obra.Titulo }}" style="max-width: 200px; border-radius: 10px;">
                    {% else %}
                        No hay imagen disponible
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_obra_index') }}">back to list</a>

    <a href="{{ path('app_obra_edit', {'id': obra.id}) }}">edit</a>

    {{ include('obra/_delete_form.html.twig') }}
{% endblock %}
